{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="flex flex-col items-center justify-center w-full min-h-screen h-full">
        {{ form_start(registrationForm) }}
            <div class="flex flex-col mb-4 bg-gray-800 p-6 rounded-lg shadow-lg">
                <h1 class="text-white text-2xl mb-4">Register</h1>
                <label for="email" class="text-indigo-300 mb-2">Email</label>
                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control p-2 mb-4 rounded bg-gray-900 text-white border border-indigo-500'}}) }}

                <label for="plainPassword" class="text-indigo-300 mb-2">Password</label>
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control p-2 mb-4 rounded bg-gray-900 text-white border border-indigo-500'}}) }}

                <div>
                    <label for="agreeTerms" class="text-indigo-300 mb-2">Agree to terms</label>
                    {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-control p-2 mb-4 rounded bg-gray-900 text-white border border-indigo-500'}}) }}
                </div>

                <button class="bg-indigo-500 text-white py-2 px-4 rounded hover:bg-indigo-600 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-opacity-50" type="submit">
                    Register
                </button>
                <p class="text-white mt-4">Already have an account? <a class="text-indigo-500 hover:text-indigo-300" href="{{ path('app_login') }}">Login</a>
            </div>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
