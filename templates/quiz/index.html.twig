{% extends 'base.html.twig' %}

{% block title %}Quiz Details{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Quiz: {{ quiz.prompt }}</h1>

        <ul>
            <li>ID: {{ quiz.id }}</li>
            <li>Prompt: {{ quiz.prompt }}</li>
            <li>User: {{ quiz.user.email }}</li>
        </ul>

        <h2>Questions:</h2>
        <form method="post" action="{{ path('app_quiz_submit') }}">
            <input type="hidden" name="quiz_id" value="{{ quiz.id }}">
            {% for question in quiz.questions %}
                <div>
                    <h3>{{ question.content }}</h3>
                    <ul>
                        {% for option in question.options %}
                                <input type="radio" id="option{{ option.id }}" name="question{{ question.id }}" value="{{ option.id }}">
                                <label for="option{{ option.id }}">{{ option.content }}</label>
                        {% endfor %}
                    </ul>
                </div>
            {% endfor %}
            <button type="submit">Submit</button>
        </form>
    </div>
{% endblock %}